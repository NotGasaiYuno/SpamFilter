<Page x:Class="MailService.Pages.Category"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Loaded="WindowIsLoaded"
      Title="Category">

    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <Grid x:Name="Container" >
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Border Margin="0, 10, 10, 0" BorderBrush="Black" BorderThickness="2" CornerRadius="10">
                <Border.Background>
                    <SolidColorBrush Color="White" Opacity="0.5"></SolidColorBrush>
                </Border.Background>
                <Button Margin="5" FontSize="24" BorderThickness="0" BorderBrush="White">
                    <Button.Background>
                        <SolidColorBrush Opacity="0.5" />
                    </Button.Background>
                </Button>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
