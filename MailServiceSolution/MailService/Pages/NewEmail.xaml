<Page x:Class="MailService.Pages.NewEmail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewEmail">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        <Border Margin="0, 10, 10, 10" BorderBrush="Black" BorderThickness="2" CornerRadius="10">
            <Border.Background>
                <SolidColorBrush Color="White" Opacity="0.5"></SolidColorBrush>
            </Border.Background>
            <Grid Margin="5">
                <TextBox x:Name="EmailBox" FontSize="24" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" BorderThickness="0" BorderBrush="White">
                    <TextBox.Background>
                        <SolidColorBrush Opacity="0.5" />
                    </TextBox.Background>
                </TextBox>
            </Grid>
        </Border>
        <Border Background="AliceBlue" Grid.Row="1" BorderThickness="2" BorderBrush="Black" CornerRadius="10" Margin="0,0,10,10">
            <Button Background="AliceBlue" FontSize="24" BorderThickness="0" BorderBrush="White" Margin="5" Content="Send"/>
        </Border>
    </Grid>
</Page>
